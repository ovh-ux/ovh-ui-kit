{
  "name": "ovh-ui-kit",
  "version": "0.0.0",
  "private": true,
  "description": "A set of maintainable components for the OVH ecosystem",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/apps/*",
    "packages/base/*",
    "packages/components/*",
    "packages/libs/*",
    "packages/vendors/*"
  ],
  "scripts": {
    "build": "yarn build:libs && yarn build:apps",
    "build:apps": "lerna exec --scope @ovh/ui-kit-documentation -- yarn build",
    "build:libs": "lerna exec --scope @ovh/ui-kit -- yarn build",
    "commit": "npm-scripts-config commit",
    "commitmsg": "npm-scripts-config commitmsg",
    "lint": "run-p lint:css lint:js",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:js": "eslint ./packages",
    "version": "yarn build && git add dist packages/base/core/less/_icons.less && npm-scripts-config version",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "preview-changelog": "npm-scripts-config preview-changelog",
    "start": "lerna exec --scope @ovh/ui-kit-workshop -- yarn storybook",
    "test": "yarn lint && lerna run test",
    "watch": "lerna exec --scope @ovh/ui-kit -- yarn watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.16.0",
    "lerna": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "npm-scripts-config": "^0.0.2",
    "npm-scripts-conventional-changelog": "^0.1.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
