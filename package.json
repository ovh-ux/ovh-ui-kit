{
  "name": "ovh-ui-kit",
  "version": "0.0.0",
  "private": true,
  "description": "A set of maintainable components for the OVH ecosystem",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/apps/*",
    "packages/base/*",
    "packages/components/*",
    "packages/libs/*",
    "packages/vendors/*"
  ],
  "scripts": {
    "build": "yarn build:libs && yarn build:apps",
    "build:apps": "lerna exec --scope @ovh/ui-kit-workshop -- yarn build",
    "build:libs": "lerna exec --scope @ovh/ui-kit -- yarn build",
    "lint": "run-p lint:css lint:js",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:js": "eslint ./packages",
    "version": "yarn build && git add dist packages/base/core/less/_icons.less && npx conventional-changelog-cli -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "start": "lerna exec --scope @ovh/ui-kit-workshop -- yarn storybook",
    "test": "run-s lint test:karma",
    "test:karma": "cross-env NODE_ENV=test babel-node ./node_modules/.bin/karma start --reporters spec,coverage --single-run",
    "watch": "lerna exec --scope @ovh/ui-kit -- yarn watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
