{
  "name": "ovh-ui-kit",
  "version": "2.18.0",
  "description": "A LESS stylekit for the OVH brand.",
  "license": "BSD-3-Clause",
  "scripts": {
    "build:version": "cross-var sed -e 's/${tmpl-npm-version}/$npm_package_version/' packages/oui/_version.tmpl.less > packages/oui/_version.less",
    "build:less": "lessc packages/oui/stylekit.less dist/oui.css",
    "build:less-min": "lessc --clean-css packages/oui/stylekit.less dist/oui.min.css",
    "build:icons": "mkdirp dist/icons && npm run build:icons-generator && node scripts/generate-icons-indexes.js",
    "build:icons-generator": "icon-font-generator packages/oui-icons/svg/*.svg -p oui-icon -o dist/icons -t span",
    "build": "rimraf dist && npm run build:version && npm run build:icons && npm run build:less && npm run build:less-min",
    "test": "echo \"no tests for this project\"",
    "fix": "stylefmt -r packages",
    "lint": "stylelint --syntax less 'packages/**/*.less'",
    "commit": "npm-scripts-config commit",
    "commitmsg": "npm-scripts-config commitmsg",
    "version": "npm run build && git add dist packages/oui-icons/_icons.less packages/oui/_version.less && npm-scripts-config version",
    "postversion": "git push && git push --tags",
    "preview-changelog": "npm-scripts-config preview-changelog"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "chalk": "^2.4.1",
    "cross-var": "^1.1.0",
    "icon-font-generator": "^2.1.9",
    "less": "^3.8.1",
    "less-plugin-clean-css": "^1.5.1",
    "mkdirp": "^0.5.1",
    "npm-scripts-config": "^0.0.2",
    "npm-scripts-conventional-changelog": "^0.1.0",
    "rimraf": "^2.6.2",
    "stylefmt": "^6.0.2",
    "stylelint": "^9.4.0"
  }
}
