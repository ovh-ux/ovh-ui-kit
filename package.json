{
  "name": "ovh-ui-kit",
  "version": "2.24.0",
  "private": true,
  "description": "A LESS stylekit for the OVH brand.",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/base",
    "packages/components/*",
    "packages/docs",
    "packages/vendors/*"
  ],
  "scripts": {
    "commit": "npm-scripts-config commit",
    "commitmsg": "npm-scripts-config commitmsg",
    "lint": "yarn lint:css",
    "lint:css": "stylelint 'packages/**/*.less' --fix",
    "version": "npm run build && git add dist packages/components/icons/_icons.less packages/base/less/_version.less && npm-scripts-config version",
    "postversion": "git push && git push --tags",
    "preview-changelog": "npm-scripts-config preview-changelog"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "less-plugin-remcalc": "^0.1.0"
  },
  "devDependencies": {
    "npm-scripts-config": "^0.0.2",
    "npm-scripts-conventional-changelog": "^0.1.0",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
