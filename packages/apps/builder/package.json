{
  "name": "@ovh-ux/ui-kit-builder",
  "private": true,
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "files": [
    "dist"
  ],
  "main": "./src/oui.js",
  "scripts": {
    "build": "npm-run-all -l -s clean build:dependency build:* copy",
    "build:css": "cpx \"../../css/src/css/{_tokens.css,tokens/*}\" \"./dist/css\"",
    "build:less": "cpx \"../../css/src/less/{_tokens.less,tokens/*}\" \"./dist/less\"",
    "build:scss": "cpx \"../../css/dist/scss/{_tokens.scss,tokens/*}\" \"./dist/scss\"",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --colors --config ./.config/webpack.config.js",
    "clean": "rimraf ./dist ../../../dist ../../libs/ui-kit/dist",
    "copy": "run-p copy:*",
    "copy:root": "cpx \"./dist/**/!(oui-flags.j*|oui-icons.j*)\" \"../../../dist\"",
    "copy:lib": "cpx \"./dist/**/!(oui-flags.j*|oui-icons.j*)\" \"../../libs/ui-kit/dist\"",
    "copy:components": "cpx \"./dist/**/!(oui-flags.j*|oui-icons.j*)\" \"../../libs/ui-kit/dist\"",
    "prepare": "yarn build",
    "build:dependency": "run-s buildCss:css buildComponents:*",
    "buildCss:css": "lerna exec --scope @ovh-ux/ui-kit.css -- yarn build",
    "buildComponents:components": "lerna exec --scope @ovh-ux/ui-kit.components -- yarn build",
    "buildComponents:copy": "cpx \"../../components/dist/js/*\" \"./dist/js\""
  },
  "dependencies": {
    "@ovh-ux/ui-kit.components": "*",
    "@ovh-ux/ui-kit.config": "*",
    "@ovh-ux/ui-kit.css": "*"
  },
  "devDependencies": {
    "angular": "^1.8.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "less": "^3.12.2",
    "less-plugin-remcalc": "^0.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-extraneous-file-cleanup-plugin": "^2.0.0",
    "webpack-merge": "^4.2.2"
  }
}
