{
  "name": "@ovh-ux/ui-kit-builder",
  "private": true,
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "files": [
    "dist"
  ],
  "main": "./src/oui.js",
  "scripts": {
    "build": "npm-run-all -l -s clean build:* copy",
    "build:less": "run-p build:less:*",
    "build:less:constants": "lessc ./src/less/_constants.less ./dist/less/_constants.less",
    "build:less:icons": "lessc ./src/less/_icons.less ./dist/less/_icons.less",
    "build:less:variables": "lessc ./src/less/_variables.less ./dist/less/_variables.less",
    "build:less:tokens": "lessc ./src/less/_tokens.less ./dist/less/_tokens.less",
    "build:less:tokens-css": "lessc ./src/less/_tokens-css.less ./dist/css/_tokens.css",
    "build:less:tokens-scss": "lessc ./src/less/_tokens-scss.less ./dist/scss/_tokens.scss",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --colors --config ./.config/webpack.config.js",
    "clean": "rimraf ./dist ../../../dist ../../libs/ui-kit/dist",
    "copy": "run-p copy:*",
    "copy:root": "cpx \"./dist/**/*\" \"../../../dist\"",
    "copy:lib": "cpx \"./dist/**/*\" \"../../libs/ui-kit/dist\"",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@ovh-ux/ui-kit.components": "*",
    "@ovh-ux/ui-kit.config": "*",
    "@ovh-ux/ui-kit.core": "*",
    "@ovh-ux/ui-kit.themes": "*"
  },
  "devDependencies": {
    "angular": "^1.7.8",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "less": "^3.9.0",
    "less-plugin-remcalc": "^0.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "rimraf": "^2.6.3",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-extraneous-file-cleanup-plugin": "^2.0.0",
    "webpack-merge": "^4.2.1"
  }
}
