{
  "name": "@ovh-ux/ui-kit.css",
  "private": true,
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "files": [
    "dist"
  ],
  "style": "./dist/css/oui.css",
  "scripts": {
    "build": "npm-run-all -l -s clean build:*",
    "clean": "rimraf ./dist",
    "build:css": "cpx \"./src/css/{_tokens.css,tokens/*}\" \"./dist/css\"",
    "build:less": "cpx \"./src/less/{_tokens.less,tokens/*}\" \"./dist/less\"",
    "build:scss": "cpx \"./src/scss/{_tokens.scss,tokens/*}\" \"./dist/scss\"",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --config webpack.config.js",
    "tokens": "run-s tokens:dir tokens:download",
    "tokens:dir": "mkdirp ./src/css && mkdirp ./src/scss",
    "tokens:download": "node ./src/js/download-tokens.js",
    "flags": "node ./src/js/generate-flags-indexes.js",
    "icons": "mkdirp ./src/fonts/oui-icons && yarn icons-generator && node ./src/js/generate-icons-indexes.js",
    "icons-generator": "icon-font-generator ./src/svg/icons/**/*.svg -n oui-icons -p oui-icon -o ./src/fonts/oui-icons -t span --types \"woff, woff2\" --center --normalize"
  },
  "dependencies": {
    "flatpickr": "^4.6.3"
  },
  "devDependencies": {
    "chalk": "^4.0.0",
    "icon-font-generator": "^2.1.10",
    "mkdirp": "^1.0.4",
    "@ovh-ux/ui-kit.config": "*",
    "mini-css-extract-plugin": "^0.9.0",
    "webpack-extraneous-file-cleanup-plugin": "^2.0.0",
    "webpack-merge": "^4.2.2"
  },
  "resolutions": {
    "svg2ttf": "^5.0.0"
  }
}
